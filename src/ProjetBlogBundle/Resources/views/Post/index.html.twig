{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Les Articles</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Sujet</th>
                <th>Publié à </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.body }}</td>
                <td>{% if entity.publishedAt %}{{ entity.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="myButton" href="{{ path('post_new') }}">
                Ajouter un article
            </a>
        </li>
    </ul>
    {% endblock %}
